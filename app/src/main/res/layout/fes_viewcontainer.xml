<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/VieTotal"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/FesImage"
        android:layout_width="100dp"
        android:layout_height="144dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/FesTitle"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Title"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeStepGranularity="1sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/FesImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FestLocation"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="85dp"
        android:autoSizeMaxTextSize="13sp"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Location"
        app:layout_constraintStart_toStartOf="@+id/FesTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FesDate"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="130dp"
        android:autoSizeMaxTextSize="13sp"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Start Date"
        app:layout_constraintStart_toStartOf="@+id/FestLocation"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>